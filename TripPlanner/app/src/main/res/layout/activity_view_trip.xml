<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewTripActivity">

    <ImageView
        android:id="@+id/im_cover_photo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/trip_details"
        android:layout_marginTop="16dp"
        android:scaleType="center" />

    <TextView
        android:id="@+id/trip_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Details"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/lv_chats"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/im_cover_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trip_details"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/trip_details"
        android:layout_toLeftOf="@+id/im_send"
        android:layout_toStartOf="@+id/im_send"
        android:ems="10"
        android:hint="Enter your message here"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/im_send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/et_message"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/im_photo"
        android:layout_toStartOf="@+id/im_photo"
        android:background="@drawable/send" />

    <ImageButton
        android:id="@+id/im_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/im_send"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/addphoto" />

</RelativeLayout>